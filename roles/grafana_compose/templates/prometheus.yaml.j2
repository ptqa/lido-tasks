global:
  scrape_interval:     15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']

  - job_name: cadvisor
    static_configs:
      - targets: ['cadvisor:8080']

  - job_name: docker
    docker_sd_configs:
      - host: unix:///var/run/docker.sock

{% if gc_node_exporters %}
  - job_name: 'node-metrics'
    static_configs:
    - targets: {{ gc_node_exporters | to_json }}
{% endif %}
